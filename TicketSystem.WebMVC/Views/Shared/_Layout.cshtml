<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>TicketSystem</title>
    <link rel="shortcut icon" href="~/img/favicon.ico">
    <!-- font-awesome -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet">

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.css" rel="stylesheet">

    <!-- custom CSS -->
    <link href="~/Content/style.css" rel="stylesheet">

    <!-- JavaScript -->
    <script type="text/javascript" src="~/Content/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="~/Content/bootstrap.js"></script>
    <script type="text/javascript" src="~/Content/plugins.js"></script>
    <script type="text/javascript" src="~/Content/main.js"></script>
</head>


<body>


    <nav class="navbar navbar-fixed-top navbar-inverse" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="navbar-brand" asp-action="GetAll" asp-controller="Movie">TicketSystem</a>


            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li @ViewBag.Home><a href="/Home/">Home</a></li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" asp-action="GetAll" asp-controller="Movie">See All Movies</a>
                    </li>
                    @if (!User.Identity!.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-action="LogIn" asp-controller="Auth">Sign In</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="SignUp" asp-controller="Auth">Sign Up</a>
                        </li>
                    }
                    else
                    {
                        @if (User.IsInRole("Employee"))
                        {
                            
                            <li class="nav-item">
                                <a class="nav-link" asp-action="AddSeat" asp-controller="Employee">Add Seat</a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">Session <i class="fa fa-angle-down"></i></a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-action="AddSession" asp-controller="Employee">Add Session</a>
                                    </li> 
                                    <li class="nav-item">
                                        <a class="nav-link" asp-action="GetListSessions" asp-controller="Employee">Update Sessions</a>
                                    </li> 
                                </ul>
                            </li>
                            
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">Movie <i class="fa fa-angle-down"></i></a>
                                <ul class="dropdown-menu">
                                 <li class="nav-item">
                                <a class="nav-link" asp-action="Add" asp-controller="Movie">Add Movie</a>
                                </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-action="GetListMovies" asp-controller="Movie">Update Movies</a>
                            </li>
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-action="GetProfile" asp-controller="Employee">Profile</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-action="GetProfile" asp-controller="Customer">Profile</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-action="LogOut" asp-controller="Auth">Sign Out</a>
                        </li>
                    }
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container -->
    </nav>

