@model List<Movie>
<div class="section" id="recent-movies" style="position: relative;">

    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <h2 class="section-title">Recent Movies</h2>
            </div>
            @foreach (var item in Model)
            {
                
                <div class="col-lg-4 col-md-4 col-sm-6">
                    <a href="/Movie/GetMovie/@item.MovieId" class="link-portfolio">
                        <div class="overlay-portfolio">
                            <h3>@item.MovieName</h3>
                            @if (item.MovieReview != null)
                            {
                                <small class="text-muted">
                                    @item.MovieReview.Substring(0,item.MovieReview.Substring(0,130).LastIndexOf(" ")) ...
                                </small>
                            }
                        </div><!-- /.overlay-portfolio -->
                      
                            @if(item.MovieBanner!=null)
                            {
                               var base64 = Convert.ToBase64String(item.MovieBanner!);
                               var imgSrc = String.Format("data:image/gif;base64,{0}", base64); 
                               <img class="img-responsive img-home-portfolio" src="@imgSrc"
                               style="height:300px;width:250px" >
                            }
                            else
                            {
                                <img class="img-responsive img-home-portfolio" src="/images/no-image.jpg"
                               style="height:300px;width:250px" >
                            }

                   
                        
                    </a>
                </div>

            }
        </div><!-- /.row -->

    </div><!-- /.container -->

</div><!-- /.section -->
