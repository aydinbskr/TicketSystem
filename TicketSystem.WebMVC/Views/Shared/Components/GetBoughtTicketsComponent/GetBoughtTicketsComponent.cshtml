@{
}
@model IDataResult<List<Ticket>>

<h4 class="d-flex justify-content-between align-items-center mb-3">
    <span class="text-danger">Your Ticket history</span>
    <span class="badge bg-primary rounded-pill">@(Model.Success?Model.Data.Count:"No history")</span>
</h4>
<ul class="list-group mb-3">
    @if (Model.Success)
    {
        foreach (var item in Model.Data)
        {
            <li class="list-group-item d-flex justify-content-between lh-sm">
                <div>
                    <h6 class="my-0">@item.Price</h6>
                    <small class="text-muted">asdasd</small>
                </div>
                <span class="text-muted">@item.CustomerId</span>
            </li>
        }
    }
    else
    {
        <li class="list-group-item d-flex justify-content-between lh-sm">
            <div>
                <h6 class="my-0">there is no payment yet</h6>
                <small class="text-muted">th</small>
            </div>
            <span class="text-muted"></span>
        </li>
    }
</ul>