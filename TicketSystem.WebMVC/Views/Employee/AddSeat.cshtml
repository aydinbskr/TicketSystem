
@{
    ViewBag.Title = "Add Seat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Seat


<div class="section-header">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <h1 class="page-header">Add Seat</h1>
            </div>

        </div>
    </div> <!-- /.container -->
</div> <!-- /.section-colored -->

<div class="container container-int">

    <ol class="breadcrumb">
        <li><a href="index.html">Home</a></li>
        <li class="active">Add Seat</li>
    </ol>
    <div class="row">
       
        <div class="col-lg-9">
           <div class="row">
                <form asp-action="AddSeat" method="post" asp-controller="Employee" enctype="multipart/form-data">

                <div class="mb-3">
                    <label>Scenes :</label>
                    <select asp-for="@Model.SceneId" asp-items="@ViewBag.Scenes" class="form-control">
                    </select>
                </div>
                <div class="mb-3">
                    <label>Sessions :</label>
                    <select asp-for="@Model.SessionId" asp-items="@ViewBag.Sessions" class="form-control">
                    </select>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="@Model.SeatNumber"></label>
                    <input asp-for="@Model.SeatNumber" class="form-control" />
                    <span asp-validation-for="@Model.SeatNumber" class="text-danger"></span>
                </div>

               
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
           </div>     
        </div>
    </div>

</div><!-- /.container -->

