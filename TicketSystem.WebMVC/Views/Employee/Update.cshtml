@model EmployeeUpdateDto
<div class="container">
    <main>
        <div class="py-5 text-center">
            <h2>User Information</h2>
            <p class="lead">You can change your informations and view your purchase history</p>
        </div>

        <div class="row g-5">
            <h4 class="mb-3">Informations</h4>
            <form class="needs-validation" method="post" asp-action="Update" asp-controller="Employee">
                <div class="row g-3">

                    <div class="col-sm-8">
                        <label asp-for=EmpUserName class="form-label">Username</label>
                        <input asp-for=EmpUserName class="form-control" placeholder="snx" required>
                        <div class="invalid-feedback">
                            Valid Username is required.
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <label asp-for=EmpPassword class="form-label">Password</label>
                        <input asp-for=EmpPassword class="form-control" placeholder="*****" required type="password">
                        <div class="invalid-feedback">
                            Valid Password is required.
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <label asp-for=EmpName class="form-label">Name</label>
                        <input asp-for=EmpName class="form-control" placeholder="Mike" required>
                        <div class="invalid-feedback">
                            Valid Name is required.
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <label asp-for=EmpSurname class="form-label">Surname</label>
                        <input asp-for=EmpSurname class="form-control" placeholder="Eric" required>
                        <div class="invalid-feedback">
                            Valid Surname is required.
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <label asp-for=EmpEmail class="form-label">Email</label>
                        <input asp-for=EmpEmail class="form-control" placeholder="sample@example.com" required>
                        <div class="invalid-feedback">
                            Valid Email is required.
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <label asp-for=EmpBirthDate class="form-label">Birthdate</label>
                        <input asp-for=EmpBirthDate class="form-control" placeholder="" required>
                        <div class="invalid-feedback">
                            Valid Birthdate is required.
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <label asp-for=EmpAddress class="form-label">Address</label>
                        <input asp-for=EmpAddress class="form-control" placeholder="Somewhere" required>
                        <div class="invalid-feedback">
                            Valid Address is required.
                        </div>
                    </div>
                    <div class="col-sm-8">
                        <label asp-for=EmpPhoneNumber class="form-label">PhoneNumber</label>
                        <input asp-for=EmpPhoneNumber class="form-control" placeholder="054612374135" required>
                        <div class="invalid-feedback">
                            Valid PhoneNumber is required.
                        </div>
                    </div>
                    <hr class="my-4">
                </div>
                <button class="btn btn-primary" type="submit">Update</button>
            </form>
        </div>
    </main>
</div>