
@model LoginDto
@{
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
@section Login{
<link rel="stylesheet" href="~/css/Login.css" />
}
<main class="form-signin">
    <form asp-action="LogIn" asp-controller="Auth" method="post">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

        <div class="form-floating">
            <input class="form-control" asp-for=Email placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" asp-for=Password placeholder="Password">
            <label for="floatingPassword">Password</label>
        </div>

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="rememberMe" value="true"> Remember me
            </label>
        </div>

        <div class="my-3">
            <div class="form-check">
                <input name="LoginType" value="Employee" type="radio" class="form-check-input" checked required>
                <label class="form-check-label" for="credit">Employee</label>
            </div>
            <div class="form-check">
                <input name="LoginType" value="Customer" type="radio" class="form-check-input" required>
                <label class="form-check-label" for="debit">Customer</label>
            </div>
        </div>
        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
        <br />
        <br />
        <form method="get" asp-action="SignUp" asp-controller="Auth">
            <button class="btn btn-secondary" type="submit">Sign Up</button>
        </form>
        <br />
        <form method="get" asp-action="GetAll" asp-controller="Movie">
            <button class="btn btn-secondary" type="submit">Return Home Page</button>
        </form>

    </form>
</main>