@model BuyTicketDto
<div class="container py-3">
    <header>
        <div class="pricing-header p-3 pb-md-4 mx-auto text-center">
            <h1 class="display-4 fw-normal">Pricing</h1>
            <p class="fs-5 text-muted">Quickly build an effective pricing table for your potential customers with this Bootstrap example. It’s built with default Bootstrap components and utilities with little customization.</p>
        </div>
    </header>
    <main>
        <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm border-primary">
                    <div class="card-header py-3 bg-light border-primary">
                        <h4 class="my-0 fw-normal">Children</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">$8</h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>You can buy a ticket with biggest dicount</li>
                            <li>Just pick an available seat</li>
                        </ul>
                        <form method="post" asp-action="BuyTicket" asp-controller="Customer">
                            <input asp-for=Price value="8" class="form-control" type="hidden" />
                            <div class="mb-3">
                                <label>Sessions :</label>
                                <select asp-items="@ViewBag.Sessions" asp-for=SessionId class="form-select">
                                </select>
                            </div>
                            <div class="mb-3">
                                <label>Seats :</label>
                                <select asp-items="@ViewBag.Seats" asp-for=SeatNumber class="form-select">
                                </select>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-outline-primary">Buy</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm border-success">
                    <div class="card-header py-3 bg-light border-success">
                        <h4 class="my-0 fw-normal">Student</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">$15</h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>You can buy a ticket with a great dicount</li>
                            <li>Just pick an available seat</li>
                        </ul>
                        <form method="post" asp-action="BuyTicket" asp-controller="Customer">
                            <input asp-for=Price value="15" class="form-control" type="hidden" />
                            <div class="mb-3">
                                <label>Sessions :</label>
                                <select asp-items="@ViewBag.Sessions" asp-for=SessionId class="form-select">
                                </select>
                            </div>
                            <div class="mb-3">
                                <label>Seats :</label>
                                <select asp-items="@ViewBag.Seats" asp-for=SeatNumber class="form-select">
                                </select>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-outline-success">Buy</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm border-danger">
                    <div class="card-header py-3 bg-light border-danger">
                        <h4 class="my-0 fw-normal">Adult</h4>
                    </div>
                    <div class="card-body">
                        <h1 class="card-title pricing-card-title">$23</h1>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Get a ticket for the movie</li>
                            <li>Just pick an available seat</li>
                        </ul>
                        <form method="post" asp-action="BuyTicket" asp-controller="Customer">
                            <input asp-for=Price value="23" class="form-control" type="hidden" />
                            <div class="mb-3">
                                <label>Sessions :</label>
                                <select asp-items="@ViewBag.Sessions" asp-for=SessionId class="form-select">
                                </select>
                            </div>
                            <div class="mb-3">
                                <label>Seats :</label>
                                <select asp-items="@ViewBag.Seats" asp-for=SeatNumber class="form-select">
                                </select>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-outline-danger">Buy</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>