@model CustomerUpdateDto
<div class="container">
    <main>
        <div class="py-5 text-center">
            <h2>User Information</h2>
            <p class="lead">You can change your informations and view your purchase history</p>
        </div>

        <div class="row g-5">
            <div class="col-md-5 col-lg-4 order-md-last">
                @await Component.InvokeAsync("GetBoughtTicketsComponent",Model.CustomerId)
            </div>
            <div class="col-md-7 col-lg-8">
                <h4 class="mb-3">Informations</h4>
                <form class="needs-validation" method="post" asp-action="Update" asp-controller="Customer">
                    <div class="row g-3">

                        <div class="col-sm-8">
                            <label asp-for=Username class="form-label">Username</label>
                            <input asp-for=Username class="form-control" placeholder="snx" required>
                            <div class="invalid-feedback">
                                Valid Username is required.
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <label asp-for=Password class="form-label">Password</label>
                            <input asp-for=Password class="form-control" placeholder="*****" required type="password">
                            <div class="invalid-feedback">
                                Valid Password is required.
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for=Name class="form-label">Name</label>
                            <input asp-for=Name class="form-control" placeholder="Mike" required>
                            <div class="invalid-feedback">
                                Valid Name is required.
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for=Surname class="form-label">Surname</label>
                            <input asp-for=Surname class="form-control" placeholder="Eric" required>
                            <div class="invalid-feedback">
                                Valid Surname is required.
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for=Email class="form-label">Email</label>
                            <input asp-for=Email class="form-control" placeholder="sample@example.com" required>
                            <div class="invalid-feedback">
                                Valid Email is required.
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for=Birthdate class="form-label">Birthdate</label>
                            <input asp-for=Birthdate class="form-control" placeholder="" required>
                            <div class="invalid-feedback">
                                Valid Birthdate is required.
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for=Address class="form-label">Address</label>
                            <input asp-for=Address class="form-control" placeholder="Somewhere" required>
                            <div class="invalid-feedback">
                                Valid Address is required.
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label asp-for=PhoneNumber class="form-label">PhoneNumber</label>
                            <input asp-for=PhoneNumber class="form-control" placeholder="054612374135" required>
                            <div class="invalid-feedback">
                                Valid PhoneNumber is required.
                            </div>
                        </div>
                        <hr class="my-4">
                        <button class="btn btn-primary" type="submit">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>